<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
  <h1 class="project_title"><%= link_to t('.project_name'), '#' %></h1>
  <nav>
      <ul class="nav navbar-nav navbar-left">
        <li ><%= link_to t('.home'), root_path %></li>
  
<% if logged_in? %>
      <li ><%= link_to t('.myrecipe'), users_path %></li>
      <li ><%= link_to t('.myfavorite'), '#' %></li>

<% else %>
        <li ><%= link_to t('.sign_up'), new_user_path %></li>
        <li ><%= link_to t('.login'), login_path %></li>
<% end %>

      </ul>
  

      <!-- Small button group -->
      <ul class="nav navbar-nav navbar-right" style="width: 350px; ">

<% if logged_in? %>
      <li style="color:#ffffff;"> 
      <strong><%= t('.hello') %></strong> <%= current_user.name %>
      </li>
      <span style="margin-right: 10em;"></span>
      <li style="text-align:right;"> <%= link_to t('.logout'), logout_path, method: "delete"%> </li>
<% end %>       
      <div class="btn-group"> 
        <button class="btn btn-default btn-sm dropdown-toggle navbar-right" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 110px;">
          <%= t('.language') %> <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li><%= link_to( t('.english'), url_for(params.merge(locale: 'en'))) %></li>
          <li><%= link_to( t('.japanese'), url_for(params.merge(locale: 'ja'))) %></li>
        </ul>
      </div>
      </ul>
    </nav>
  </div>
</header>